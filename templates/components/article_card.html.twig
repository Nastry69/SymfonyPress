<article>
  {% if article.image %}
        <figure style="margin:0 0 0.75rem 0;">
            <img
                src="{{ asset('uploads/articles/' ~ article.image) }}"
                alt="{{ article.title }}"
                loading="lazy"
                width="800"
                height="450"
                style="width:100%;height:auto;border-radius:8px;object-fit:cover;"
            >
        </figure>
    {% endif %}
        <h2>
            <a href="{{ path('article_show', { slug: article.slug }) }}">
                {{ article.title }}
            </a>
        </h2>
        <p>
            <time datetime="{{ article.createdAt|date('d-m-Y') }}">
                {{ article.createdAt|date('d/m/Y') }}
            </time>
            <a href="{{ path('category_show', { slug: article.category.slug }) }}">
                {{ article.category.name }}
            </a>
        </p>

    <section>
        <p>
            {{ article.content|slice(0, 150) ~ 'â€¦' }}
        </p>
    </section>
</article>
